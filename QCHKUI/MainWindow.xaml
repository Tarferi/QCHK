                <Button x:Name="brwsBtnOutMap" Content="Browse" HorizontalAlignment="Right" Margin="0,70,10,0" VerticalAlignment="Top" Width="80" RenderTransformOrigin="-0.093,-0.612" Height="25" FontSize="14" Click="brwsBtnOutMap_Click"/>
